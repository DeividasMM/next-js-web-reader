<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Welcome to "Read-y"</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-acKdHbM1Jf4mZc6DkrE0X8+Y/AEXlCwqYVOmJGihAr6QNyMGnAv8IBKpcQfJXo3gugm/8qKaNf27g5FaGZ6xZQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            height: 100%;
        }

        /* Conteiner icon left */
        .vertical-icons {
            position: fixed;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding: 10px;
            background: none;
        }

        .icon-btn {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 24px;
            color: #1c1c1c;
            transition: color 0.3s, transform 0.3s;
            padding: 10px;
        }

        .icon-btn:hover {
            color: #555;
            transform: scale(1.1);
        }

        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            text-align: center;
            margin-left: 80px;
        }

        .site-title {
            font-size: 3rem;
            margin-bottom: 10px;
        }

        .site-subtitle {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 30px;
        }

        .check-library-btn {
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            margin-bottom: 30px;
        }

        .arrow-down {
            font-size: 2rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(10px);
            }
        }
    </style>
</head>

<body>
    <nav class="vertical-icons">
        <!-- Sign In -->
        <button class="icon-btn" id="signInBtn" title="Sign In">
            <i class="fas fa-user"></i> Sign in
        </button>
        <!-- Upload -->
        <button class="icon-btn" id="uploadBtn" title="Upload File">
            <i class="fas fa-upload"></i> Upload File
        </button>
        <!-- Library -->
        <button class="icon-btn" id="libraryBtn" title="Library">
            <i class="fas fa-book"></i> Library
        </button>
        <!-- Comment page -->
        <button class="icon-btn" id="commentBtn" title="Comments">
            <i class="fas fa-comments"></i> Comments
        </button>
    </nav>

    <main class="main-content">
        <h1 class="site-title">Read · Y</h1>
        <p class="site-subtitle">Modern library — for enthusiasts</p>
        <button class="check-library-btn">Check out our library!</button>
        <div class="arrow-down">⬇</div>
    </main>

    <!--  jQuery (CDN) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function() {
    $("#signInBtn").click(function() {
      alert("Sign In clicked!");
    });
  
    $("#uploadBtn").click(function() {
      alert("Upload clicked!");
    });
  
    $("#libraryBtn").click(function() {
      alert("Library clicked!");
    });
  
    $("#commentBtn").click(function() {
      alert("Comment page clicked!");
    });
  });
    </script>
</body>

</html>
